{
  "name": "irid",
  "version": "2.0.0-alpha.2",
  "description": "Parse, convert and manipulate colors",
  "main": "__build/irid.js",
  "scripts": {
    "test": "cross-env NODE_ENV=testing mocha",
    "build": "babel src --out-dir __build --source-maps inline",
    "prepublish": "npm run build",
    "watch-build": "npm run build -- --watch",
    "test:watch": "npm test -- --watch"
  },
  "repository": "github:n3dst4/irid",
  "homepage": "http://n3dst4.github.io/irid/",
  "author": "Neil de Carteret <npm@lumphammer.com>",
  "license": "ISC",
  "keywords": [],
  "dependencies": {
    "babel-runtime": "^6.23.0"
  },
  "eslintConfig": {
    "extends": "@n3dst4/eslint-config-n3dst4",
    "env": {
      "es6": true
    },
    "rules": {
      "no-var": "error",
      "prefer-const": "error"
    }
  },
  "devDependencies": {
    "@n3dst4/eslint-config-n3dst4": "^3.1.0",
    "babel-cli": "^6.5.1",
    "babel-plugin-rewire": "^1.0.0",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.5.0",
    "babel-preset-react": "^6.5.0",
    "babel-register": "^6.7.2",
    "babelify": "^7.2.0",
    "browserify": "^13.0.0",
    "chai": "^3.5.0",
    "cross-env": "^3.2.4",
    "envify": "^3.4.0",
    "eslint": "^3.19.0",
    "eslint-plugin-react": "^6.10.3",
    "mocha": "^5.2.0",
    "watchify": "^3.11.0"
  },
  "babel": {
    "plugins": [
      "transform-object-rest-spread",
      "transform-runtime"
    ],
    "presets": [
      "es2015",
      "react"
    ],
    "env": {
      "testing": {
        "plugins": [
          "rewire"
        ]
      }
    }
  }
}
