{
  "name": "irid",
  "version": "2.0.0",
  "description": "Parse, convert and manipulate colors",
  "main": "__build/irid.js",
  "scripts": {
    "test": "cross-env NODE_ENV=testing karma start --single-run",
    "build": "babel src --out-dir __build --source-maps inline",
    "prepublish": "npm run build",
    "watch-build": "npm run build -- --watch",
    "watch-test": "cross-env NODE_ENV=testing karma start"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/n3dst4/colour.js.git"
  },
  "homepage": "https://github.com/n3dst4/colour.js#readme",
  "author": "Neil de Carteret <npm@lumphammer.com>",
  "license": "ISC",
  "keywords": [],
  "dependencies": {
    "babel-runtime": "^6.23.0"
  },
  "eslintConfig": {
    "extends": "@n3dst4/eslint-config-n3dst4",
    "env": {
      "es6": true
    },
    "rules": {
      "no-var": "error",
      "prefer-const": "error"
    }
  },
  "devDependencies": {
    "@n3dst4/eslint-config-n3dst4": "^3.1.0",
    "eslint": "^3.19.0",
    "eslint-plugin-react": "^6.10.3",
    "babel-cli": "^6.5.1",
    "babel-preset-es2015": "^6.5.0",
    "babel-preset-react": "^6.5.0",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "chai": "^3.5.0",
    "mocha": "^2.4.5",
    "sinon": "^2.1.0",
    "sinon-chai": "^2.9.0",
    "cross-env": "^3.2.4",
    "babel-register": "^6.7.2",
    "babel-plugin-rewire": "^1.0.0",
    "browserify": "^13.0.0",
    "envify": "^3.4.0",
    "karma": "^0.13.21",
    "karma-browserify": "^5.0.1",
    "karma-firefox-launcher": "^1.0.1",
    "karma-mocha": "^0.2.2",
    "karma-notify-reporter": "^0.1.1",
    "karma-teamcity-reporter": "^0.2.1",
    "watchify": "^3.7.0",
    "babelify": "^7.2.0"
  },
  "babel": {
    "plugins": [
      "transform-object-rest-spread",
      "transform-runtime"
    ],
    "presets": [
      "es2015",
      "react"
    ],
    "env": {
      "testing": {
        "plugins": [
          "rewire"
        ]
      }
    }
  }
}
